<div class="card border-info mb-3">
  <div class="title card-header bg-info border-info text-white">{{vote_count}} {{format_plural "vote" vote_count}}</div>
  <div class="card-body">
    <h5 class="card-tile"><a href='/post/{{id}}'>{{title}}</a></h5>
    <a class="btn" href={{post.post_url}}><i class="fa fa-imdb" style="font-size:50px;color:black"></i></a>
  </div>
  <div class="card-footer bg-transparent border-transparent">
    <button type="button" class="upvote-btn btn btn-info">Vote</button>
  </div>
</div>
